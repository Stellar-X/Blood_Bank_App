<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.blood_bank_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Blood_Bank_App">
        <activity android:name=".LifeSavers.Activities.RequestsActivity"></activity>
        <activity android:name=".LifeSavers.Activities.Profile" />
        <activity android:name=".LifeSavers.Activities.Feedback" />
        <activity android:name=".LifeSavers.Activities.AboutUs" />
        <activity android:name=".LifeSavers.Activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LifeSavers.Activities.LoginActivity" />
        <activity android:name=".LifeSavers.Activities.RegisterActivity" />
        <activity android:name=".LifeSavers.Activities.MainActivity" />
    </application>

</manifest>